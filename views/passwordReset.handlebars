<div class="container">

  {{! Display a toast message if one was provided. }}
  {{#if toastMessage}}
    <p>{{toastMessage}}</p>
  {{/if}}

  {{!-- Display password link expired message if one was provided --}}
  {{#if message}}
    <p>{{message}}</p>
  {{/if}}

  <h1>Password reset form</h1>
  <form action="/reset-password-email" method="POST">

    <div class="flex-col mb">
      <label for="resetEmail">Email:</label>
      <input type="email" name="resetEmail" id="resetEmail" required />
    </div>

    <div class="flex-row justify-sb align-center">
      <button type="submit">Email reset link</button>
    </div>
    <p>Click to register <a href="/register">here</a></p>
  </form>

</div>

